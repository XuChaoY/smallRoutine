/* pages/movies/movies.wxss */
@import 'movie-list/movie-list-template.wxss';

.search{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  width: 100%;
  background-color: #f2f2f2;
}

.search-img{
  margin: auto 0 auto 20rpx;
}

.placeholder{
  font-size: 14rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search input{
  height: 100%;
  width: 600rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.container{
  background-color: #f2f2f2
}

.movies-template{
  margin-bottom:30rpx;
}

.search-panel{
  position: absolute;
  top: 80rpx;
}

.close-img{
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}