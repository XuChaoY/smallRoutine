/* pages/posts/posts.wxss */
swiper{
  width:100%;
  height:600rpx
}

swiper image{
  width:100%;
  height:600rpx
}

.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom:10rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  display: flex;
  align-items: center;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle */
}
.post-date{
  margin-left: 20rpx;
  /* vertical-align: middle; */
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom:20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image{
  width:100%;
  height: 340rpx;
  margin-bottom:15px;
}

.post-content{
  font-size: 28rpx;
  color:#666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom:20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  align-items: center;
  font-size: 26rpx;
}

.post-like-image{
  width: 32rpx;
  height:32rpx;
  margin-right: 16rpx;
}

.post-like-font{
  margin-right:40rpx;
}